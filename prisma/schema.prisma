generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model PlantGroup {
  id     Int     @id @default(autoincrement())
  name   String
  plants Plant[] 

  @@map("plant_group")
}

model Plant {
  id           Int        @id @default(autoincrement())
  name         String
  description  String
  plantGroupId Int        
  plantGroup   PlantGroup @relation(fields: [plantGroupId], references: [id]) 
  norms        Norms?     @relation("PlantNorms") 
  zones        Zone[] 
}

model Norms {
  id                    Int   @id @default(autoincrement())
  temperature           Float
  airHumidity           Float 
  substrateHumidity     Float 
  phLevel               Float 
  nutrientConcentration Float 
  solutionTemperature   Float
  solutionLvl           Float 
  lightIntensity        Float 
  plantId               Int   @unique
  plant                 Plant @relation("PlantNorms", fields: [plantId], references: [id]) 
}

model Station {
  id              Int            @id @default(autoincrement())
  name            String 
  zones           Zone[]
  stationParamsId Int           @unique 
  stationParams   StationParams @relation(fields: [stationParamsId], references: [id])
}

model Zone {
  id        Int     @id @default(autoincrement())
  name      String
  plantId   Int     
  plant     Plant   @relation(fields: [plantId], references: [id]) 
  isLightOn Boolean @default(false) 

  zoneParamsId Int        @unique 
  zoneParams   ZoneParams @relation(fields: [zoneParamsId], references: [id])

  stationId Int     
  station   Station @relation(fields: [stationId], references: [id]) 
}

model ZoneParams {
  id                Int   @id @default(autoincrement())
  temperature       Float 
  airHumidity       Float 
  substrateHumidity Float 
  zone              Zone? @relation() 
}

model StationParams {
  id                    Int     @id @default(autoincrement())
  phLevel               Float   
  nutrientConcentration Float  
  solutionTemperature   Float  
  solutionLvl           Float   

  station               Station? @relation()
}